@using AspNetMvcWebSite.DataAccessLayer
@model DatabaseContext


@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Google Fonts -->
<!--<link href="http://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic,700itali" rel="stylesheet">
<link href="http://fonts.googleapis.com/css?family=Raleway:400,900,800,700,500,200,100,600" rel="stylesheet">-->
<!-- Stylesheets
<link rel="stylesheet" href="~/Styles/bootstrap/bootstrap.css">-->
<link rel="stylesheet" href="~/Styles/css/misc.css">
<link rel="stylesheet" href="~/Styles/css/green-scheme.css">

<!-- JavaScripts -->
<script src="~/Styles/js/jquery-1.10.2.min.js"></script>
<script src="~/Styles/js/jquery-migrate-1.2.1.min.js"></script>

<link rel="shortcut icon" href="~/Styles/img/favicon.ico" type="image/x-icon" />

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8 blog-posts">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="post-blog">
                            <div class="blog-image">
                                <a href="@blog.Image">
                                    <img src="" alt="">
                                </a>
                            </div> <!-- /.blog-image -->
                            <div class="blog-content">
                                <span class="meta-date"><a href="#">28 February 2084</a></span>
                                <span class="meta-comments"><a href="#">14 Comments</a></span>
                                <span class="meta-author"><a href="#">Candy Sharp</a></span>
                                <h3><a href="blog-single.html">@blog.Tittle</a></h3>
                                <p class="light-text">@blog.Subject</p>
                                <p>@blog.Content<a href="blog-single.html">Continue Reading...</a></p>
                            </div> <!-- /.blog-content -->
                        </div> <!-- /.post-blog -->
                    }

                    
                </div> <!-- /.col-md-12 -->
                
            </div> <!-- /.row -->
        </div> <!-- /.col-md-8 -->

        <div class="col-md-2"></div>

    </div> <!-- /.row -->
    </div> <!-- /.container -->
<!-- Scripts -->
<script src="~/Styles/js/plugins.min.js"></script>
<script src="~/Styles/js/medigo-custom.min.js"></script>

@section addProduct{
    @Html.Action("AdminPropertiesSection", "Home")
}

